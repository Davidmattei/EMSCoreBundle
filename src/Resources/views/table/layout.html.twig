{% block table %}
{# @var table EMS\CoreBundle\Core\Table\TableInterface #}
<div class="box">
    <div class="box-body">
        <table id="{{ table.name }}" class="core-data-table table table-striped table-bordered" style="width:100%"
                data-url="{{ path('ems.table.data', {'name': table.name  }) }}">
            <thead>
                <tr>
{#                    {% for column in table.columns %}<th>{{ column }}</th>{% endfor %}#}
                    <td data-name="#">#</td>
                    <td data-name="name">name</td>
                    <td data-name="indexes">indexes</td>
                    <td data-name="total">total</td>
                    <td data-name="action" data-type="html" data-prototype="{{- block('columnButtons')|e('html_attr') -}}">action</td>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
{% endblock %}

{%- block columnButtons -%}
    <a href="{{ path('environment-v2.index') }}" class="btn btn-primary btn-sm">test</a>
{%- endblock -%}