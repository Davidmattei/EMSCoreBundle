<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="ems_core.table.type_registry" class="EMS\CoreBundle\Core\Table\Type\TypeRegistry" >
            <argument type="tagged_iterator" tag="ems_core.table"/>
        </service>

        <service id="EMS\CoreBundle\Core\Table\TableFactoryInterface" alias="ems_core.data_table.factory" />
        <service id="ems_core.data_table.factory" class="EMS\CoreBundle\Core\Table\DataTableFactory" >
            <argument type="service" id="ems_core.table.type_registry"/>
        </service>

        <service id="ems_core.table.environment.unreferenced_aliases" class="EMS\CoreBundle\Table\Environment\UnreferencedAliasesType" >
            <argument type="service" id="ems.service.alias" />
            <tag name="ems_core.table"/>
        </service>
    </services>
</container>
